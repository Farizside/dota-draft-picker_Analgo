<table class="table text-light">
  <thead>
    <tr>
      <th scope="col">Image Hero</th>
      <th scope="col">Name Hero</th>
      <th scope="col">Ability Hero</th>
      <th scope="col">Role Hero</th>
    </tr>
  </thead>
  <tbody id="heroes-list-table">
    <% heroes.forEach(item=>{%>
      <tr class="animate-hover-select">
        <td style="display:none"><%=item.id%></td>
        <td><img src="https://cdn.cloudflare.steamstatic.com/apps/dota2/images/dota_react/heroes/<%= item.label.toLowerCase().split(' ').join('_') %>.png" id="hero-list-img" style="width:90%" alt=""></td>
        <td id="hero-list"><%=item.name%></td>
        <td class=""><img src="<%=baseUrl%>/assets/<%=item.ability%>.svg" id="hero-list-ability" width="40"></td>
        <td class="">
             <% item.roles.forEach((role,index)=>{ %>
              <% if(index <3){ %>
                <%- include('./role.ejs',{role_name:role}) %>
                <%} %>
             <%}) %>
             

          </td>
        </tr>
      <% }) %> 
  </tbody>
</table>